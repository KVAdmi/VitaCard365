<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
	<!-- Google Maps SDK Key (iOS) - injected via scripts/ios-set-gms-key.js from env (GMS_API_KEY) -->
	<key>GMSApiKey</key>
	<string>__INJECTED_BY_APPFLOW__</string>

	<!-- Privacy usage descriptions -->
	<key>NSLocationWhenInUseUsageDescription</key>
	<string>Usamos tu ubicación para registrar tus recorridos y centrar el mapa.</string>
	<key>NSLocationAlwaysAndWhenInUseUsageDescription</key>
	<string>Usamos tu ubicación para registrar tus recorridos y centrar el mapa.</string>
	<key>NSLocationAlwaysUsageDescription</key>
	<string>Usamos tu ubicación para registrar tus recorridos y centrar el mapa.</string>
	<key>NSCameraUsageDescription</key>
	<string>VitaCard necesita acceso a la cámara para encender la linterna y tomar imágenes opcionales dentro de la app.</string>
	<key>NSBluetoothPeripheralUsageDescription</key>
	<string>VitaCard necesita acceso Bluetooth para conectar dispositivos de entrenamiento compatibles.</string>
	<key>NSBluetoothAlwaysUsageDescription</key>
	<string>VitaCard usa Bluetooth para conectar aparatos de gimnasio y registrar tu entrenamiento.</string>
	<key>NSMicrophoneUsageDescription</key>
	<string>VitaCard necesita acceso al micrófono para funciones opcionales dentro de la app.</string>

	<!-- HealthKit permissions descriptions -->
	<key>NSHealthShareUsageDescription</key>
	<string>VitaCard usa Salud para leer tu frecuencia cardiaca y métricas de entrenamiento.</string>
	<key>NSHealthUpdateUsageDescription</key>
	<string>VitaCard puede escribir métricas de entrenamiento si lo autorizas.</string>

	<!-- Bundle metadata -->
	<key>CFBundleDevelopmentRegion</key>
	<string>en</string>
	<key>CFBundleDisplayName</key>
	<string>VitaCard365</string>
	<key>CFBundleExecutable</key>
	<string>$(EXECUTABLE_NAME)</string>
	<key>CFBundleIdentifier</key>
	<string>$(PRODUCT_BUNDLE_IDENTIFIER)</string>
	<key>CFBundleInfoDictionaryVersion</key>
	<string>6.0</string>
	<key>CFBundleName</key>
	<string>$(PRODUCT_NAME)</string>
	<key>CFBundlePackageType</key>
	<string>APPL</string>
	<key>CFBundleShortVersionString</key>
	<string>$(MARKETING_VERSION)</string>
	<key>LSRequiresIPhoneOS</key>
	<true/>

	<!-- UI setup -->
	<key>UILaunchStoryboardName</key>
	<string>LaunchScreen</string>
	<key>UIMainStoryboardFile</key>
	<string>Main</string>
	<key>UIRequiredDeviceCapabilities</key>
	<array>
		<string>armv7</string>
	</array>
	<key>UISupportedInterfaceOrientations</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>
	<key>UISupportedInterfaceOrientations~ipad</key>
	<array>
		<string>UIInterfaceOrientationPortrait</string>
	</array>
	<key>UIViewControllerBasedStatusBarAppearance</key>
	<true/>

	<!-- Background modes required by BLE and location features -->
	<key>UIBackgroundModes</key>
	<array>
		<string>location</string>
		<string>bluetooth-central</string>
	</array>

	<!-- Export compliance -->
	<key>ITSAppUsesNonExemptEncryption</key>
	<false/>

	<!-- Custom URL scheme for deep links (e.g. Supabase OAuth redirects) -->
	<key>CFBundleURLTypes</key>
	<array>
		<dict>
			<key>CFBundleURLSchemes</key>
			<array>
				<string>vitacard365</string>
			</array>
		</dict>
	</array>
</dict>
</plist>
