<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Pre-Android 12 fallback splash background -->
        <item name="android:windowBackground">@drawable/launch_splash</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <!-- Asegura fondo azul despuÃ©s del splash hasta que WebView pinte -->
        <item name="android:windowBackground">@color/vita_splash_bg</item>
    </style>


    <style name="AppTheme.NoActionBarLaunch" parent="Theme.SplashScreen">
        <!-- Android 12+ splash attributes -->
        <item name="windowSplashScreenBackground">#0C1C3E</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/AppTheme.NoActionBar</item>
        <!-- Fallback pre-Android 12: pintar fondo + logo centrado -->
        <item name="android:windowBackground">@drawable/launch_splash</item>
    </style>

</resources>