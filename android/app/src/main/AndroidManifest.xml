<manifest xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- PERMISOS -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <!-- MicrÃ³fono para grabaciÃ³n de sueÃ±o -->
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <!-- Foreground service y notificaciones (Android 13+) -->
    <!-- Agregado para compatibilidad con servicios en primer plano y notificaciones -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <!-- Bluetooth (Android 12+) -->
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />
    <uses-permission android:name="android.permission.BLUETOOTH_SCAN" android:usesPermissionFlags="neverForLocation" />
    <uses-permission android:name="android.permission.BLUETOOTH_CONNECT" />
    <!-- TODO: Si la app no hace advertising BLE, se puede retirar BLUETOOTH_ADVERTISE en una PR posterior. -->
    <uses-permission android:name="android.permission.BLUETOOTH_ADVERTISE" />

    <!-- Recomendado por Maps: OpenGL ES 2.0 -->
    <uses-feature android:glEsVersion="0x00020000" android:required="true" />
    <!-- BLE disponible pero no requerido para instalar -->
    <uses-feature android:name="android.hardware.bluetooth_le" android:required="false" />

    <!-- DeclaraciÃ³n de consultas (Android 11+) para acciones BLE -->
    <queries>
        <intent>
            <action android:name="android.bluetooth.adapter.action.REQUEST_ENABLE" />
        </intent>
        <intent>
            <action android:name="android.bluetooth.device.action.FOUND" />
        </intent>
    </queries>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="true"
        android:usesCleartextTraffic="true"
        android:enableOnBackInvokedCallback="true">
        <!-- Google Maps SDK (debe coincidir con la que pasas desde JS) -->
        <meta-data
            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyBg5PGOY4R91A2u9BW_eu6021p7gNJR7pk"
        />

        <!-- Activity principal -->
        <activity
            android:name="com.vitacard365.app.MainActivity"
            android:exported="true"
            android:launchMode="singleTask"
            android:configChanges="orientation|keyboardHidden|keyboard|screenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode"
            android:hardwareAccelerated="true"
            android:windowSoftInputMode="adjustResize"
            android:theme="@style/AppTheme.NoActionBarLaunch">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <!-- Deep links HTTPS (App Links) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="https" android:host="vitacard365.app" />
            </intent-filter>
            <!-- Deep link nativo para OAuth (Supabase PKCE) -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <!-- Coincide con vitacard365://auth/callback -->
                <data android:scheme="vitacard365" android:host="auth" android:pathPrefix="/callback" />
            </intent-filter>
            <!-- Deep link nativo alterno: vitacard365://auth-callback (compatibilidad y nuevo estÃ¡ndar) -->
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="vitacard365" android:host="auth-callback" />
            </intent-filter>
            <!-- Deep link para recuperación de contraseña: vitacard365://reset-password -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="vitacard365" android:host="reset-password" />
            </intent-filter>
            <!-- Deep link de retorno de Mercado Pago: vitacard365://mp-return?status=success|failure|pending -->
            <intent-filter>
                <action android:name="android.intent.action.VIEW" />
                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />
                <data android:scheme="vitacard365" android:host="mp-return" />
            </intent-filter>
        </activity>

        <!-- FileProvider (Capacitor) -->
        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data android:name="android.support.FILE_PROVIDER_PATHS" android:resource="@xml/file_paths" />
        </provider>
    </application>
</manifest>
